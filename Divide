#include <iostream>
using namespace std;
 
double divide(int x, int y)
{
 try{
  if(y==0)
  {
  throw("Can't divide with zero, you Praveen!")
  }
  else
  {
  return x/y;
  }
 }
 catch(string str)
 {
  cout << str;
  return INT_MAX;
 }
}
int main()
{
int num1, num2;
    cout << "Enter first number: \n";
    cin >> num1;
    cout << "Enter second number: \n";
    cin >> num2;
    cout<<"Division of these two number is "<<divide(num1,num2)<<endl;
    return 0;
}
